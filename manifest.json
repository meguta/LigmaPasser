{
    "manifest_version": 2,
    "name": "Password by Ligma",
    "version": "1.0",
    "description": "Sucks off your ligma",
    "icons": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    },
    "permissions" : [
      "activeTab",
      "storage"
    ],
    "browser_action": {
      "default_icon": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
      },
      "default_popup": "popup.html",
      "default_title": "Check out our balls"
    },
    "content_scripts": [{
      "matches": ["http://*/*", "https://*/*"],
      "js": ["inject.js"]
    }]
}